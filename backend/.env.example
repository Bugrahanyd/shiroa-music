# Database
DATABASE_URL=postgresql://user:password@localhost:5432/shiroa
MONGODB_URI=mongodb://localhost:27017/shiroa

# Server
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT
JWT_SECRET=your_super_secret_jwt_key_change_in_production_min_32_chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Email (Resend)
RESEND_API_KEY=re_your_resend_api_key
FROM_EMAIL=noreply@shiroa.com

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Storage (Cloudflare R2 - ÜCRETSİZ 10GB)
CLOUDFLARE_R2_ACCOUNT_ID=your_account_id
CLOUDFLARE_R2_ACCESS_KEY_ID=your_access_key
CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_secret_key
CLOUDFLARE_R2_BUCKET_NAME=shiroa-uploads
CLOUDFLARE_R2_PUBLIC_URL=https://your-bucket.r2.dev

# AI Services (ÜCRETSİZ ALTERNATİFLER)
# OpenAI (başlangıç) → Llama 3 (ücretsiz, Hugging Face)
OPENAI_API_KEY=sk_your_openai_key
HUGGINGFACE_API_KEY=hf_your_huggingface_key

# Music Generation
AI_MUSIC_MODE=custom  # suno | custom (custom = ücretsiz MusicGen)
SUNO_API_KEY=  # Opsiyonel, büyüdükten sonra

# Voice Generation  
AI_VOICE_MODE=xtts  # elevenlabs | xtts (xtts = ücretsiz)
ELEVENLABS_API_KEY=  # Opsiyonel, büyüdükten sonra

# AI Service URL (kendi Python servisimiz)
AI_SERVICE_URL=http://localhost:8000

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://shiroa.vercel.app,https://shiroa.com

# Monitoring (ÜCRETSİZ ALTERNATİFLER)
# Sentry → Self-hosted Sentry (ücretsiz)
SENTRY_DSN=  # Opsiyonel
